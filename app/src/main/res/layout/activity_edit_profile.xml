<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">




    <Button
        android:id="@+id/edit_image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image1"
        app:layout_constraintStart_toStartOf="@+id/image1" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image1" />

    <Button
        android:id="@+id/edit_image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image2"
        app:layout_constraintLeft_toLeftOf="@+id/image2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/edit_image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image3"
        app:layout_constraintLeft_toLeftOf="@+id/image3" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        app:layout_constraintLeft_toRightOf="@+id/image3" />

    <Button
        android:id="@+id/edit_image4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image4"
        app:layout_constraintLeft_toLeftOf="@+id/image4" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/image3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/edit_image5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image5"
        app:layout_constraintLeft_toLeftOf="@+id/image5" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/image_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/image4"
        app:layout_constraintLeft_toRightOf="@+id/image5" />

    <Button
        android:id="@+id/edit_image6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toTopOf="@+id/image6"
        app:layout_constraintLeft_toLeftOf="@+id/image6" />


</androidx.constraintlayout.widget.ConstraintLayout>